---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio de Jhonjandrys Ramirez, desarrollador y programador web con más de un año de experiencia. Contrátalo para crear tu página web o aplicación." />
    <meta name="keywords" content="Desarrollador Web, Programador Web, Jhonjandrys Ramirez, Portafolio Web, Desarrollo de Aplicaciones" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <link rel="icon" type="image/svg+xml" href="/icon1.svg" />
    <link rel="icon" sizes="180x180" href="/icon1.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="/icon1.svg">
    <link rel="icon" type="image/png" sizes="16x16" href="/icon1.svg">
    <meta name="generator" content={Astro.generator} />
    <title>Jhonjandrys Ramirez | Desarrollador y Programador Web Profesional</title>
  </head>
  <body>
    <div
      class="absolute inset-0 -z-10 min-h-screen w-full bg-[radial-gradient(100%_100%_at_50%_90%,#000_40%,#2f6fe3_100%)]">
      <Header />
      <slot />
      <Footer/>
    </div>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
    /*Se le esta indicando al navegador que colores debe soportar*/
  }
  html {
    background-color: #050505;
    display: flex;
    flex-direction: column;
    scroll-behavior: smooth;
  }
  body {
    margin: 0 auto;
    font-family: "Onest Variable", sans-serif;
  }
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
