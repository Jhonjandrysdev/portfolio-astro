---
import Brief from "../icons/Brief.astro";

const { Fecha, Titulo, Descripcion, Link } = Astro.props;
---

<div class="flex gap-2 items-center justify-start mb-3">
  <Brief />
  <h1 class="font-bold text-2xl">Experiencia Laboral</h1>
</div>
<div class="flex items-center">
  <div
    class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-[color:#2f6fe3] sm:ring-8 dark:ring-gray-900 shrink-0"
  >
    <svg
      class="w-2.5 h-2.5 text-white dark:text-blue-300"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
      ></path>
    </svg>
  </div>
  <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
</div>
<div class="mt-3 sm:pe-8">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
    {Titulo}
  </h3>
  <time
    class="block mb-4 text-base font-medium italic dark:text-white"
    >{Fecha}</time
  >
  <p
    class="text-base font-semibold text-gray-500 dark:text-gray-400 text-justify mb-4"
  >
    {Descripcion}
  </p>
  <a
    href={Link}
    target="_blank"
    rel="noopener"
    class="border rounded-full inline-flex gap-x-2 py-2 justify-center items-center px-3 text-sm font-medium hover:bg-gray-100 dark:[background-color:#2f6fe3] dark:border-white hover:font-bold dark:hover:[background-color:#2815c3] dark:text-white hover:scale-110 transition"
    ><svg
      class="size-3 ms-2 rtl:rotate-180"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 10"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 5h12m0 0L9 1m4 4L9 9"></path>
    </svg>Ir a Proyectos ðŸ’»</a
  >
</div>
